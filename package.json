{
  "name": "laros-watch-api",
  "scripts": {
    "dev": "bun run --hot src/index.ts",
    "db:migrate": "bunx drizzle-kit migrate",
    "db:push": "bunx drizzle-kit push",
    "db:studio": "bunx drizzle-kit studio",
    "db:fresh": "rm -f db.sqlite && touch db.sqlite && bun db:push && chmod 666 db.sqlite"
  },
  "dependencies": {
    "@libsql/client": "^0.15.9",
    "dotenv": "^17.0.1",
    "drizzle-orm": "^0.44.2",
    "hono": "^4.8.4"
  },
  "devDependencies": {
    "@types/bun": "^1.2.18",
    "drizzle-kit": "^0.31.4"
  }
}
